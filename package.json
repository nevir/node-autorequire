{
  "name":        "autorequire",
  "version":     "0.1.0",
  "description": "Automatically requires source for a module/project, provided you follow a convention.",
  "keywords":   ["require", "autorequire", "autoload", "modules", "load", "loader"],
  "homepage":    "https://github.com/nevir/node-autorequire",
  "author":      "Ian MacLeod <ian@nevir.net> (https://github.com/nevir)",

  "licenses": [{
    "type": "MIT",
    "url":  "https://github.com/nevir/node-autorequire/MIT-LICENSE.txt"
  }],

  "repository": {
    "type": "git",
    "url":  "https://github.com/nevir/node-autorequire"
  },

  "main": "./lib/autorequire",
  "directories": {
    "lib": "./lib"
  },

  "engines": {
    "node": "~v0.4.11"
  },
  "dependencies": {},
  "devDependencies": {
    "coffee-script": "~1.1.2",
    "docco":         "https://github.com/nevir/docco/tarball/recursive_dirs",
    "vows":          "~0.5.11"
  },


  "scripts": {
    "build":   "rm -rf lib doc && node_modules/coffee-script/bin/coffee -c -o lib/ src/ && npm run-script docco",
    "console": "npm run-script build && rlwrap --always-readline node_modules/coffee-script/bin/coffee",
    "docco":   "rm -rf doc && node_modules/docco/bin/docco src/",
    "pretest": "npm run-script build",
    "test":    "node_modules/vows/bin/vows test/* --spec"
  }
}
